{
	"name": "streamforge-backend",
	"version": "1.0.0",
	"description": "Backend service for endless game stream with donation events",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "bun src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target node",
		"lint": "bunx biome check",
		"lint:fix": "bunx biome check --write",
		"type-check": "bun --dry-run src/index.ts"
	},
	"dependencies": {
		"@types/uuid": "^9.0.7",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"helmet": "^7.1.0",
		"uuid": "^9.0.1",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.0",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"bun-types": "latest",
		"prettier": "^3.1.0",
		"typescript": "^5.3.2"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"keywords": [
		"game",
